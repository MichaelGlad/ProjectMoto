<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.glm.motohelp.MainActivity">



    <Button
        android:id="@+id/btnAccident"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"

        android:background="@drawable/round_button"

        android:padding="15dp"
        android:text="@string/accident"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFuel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_purple"

        android:padding="15dp"
        android:src="@drawable/ic_fuel_white"
        app:layout_constraintRight_toLeftOf="@+id/btnFlatTire"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tilInformation" />

    <ImageButton
        android:id="@+id/btnFlatTire"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_cyan"


        android:src="@drawable/ic_flat_tire"
        app:layout_constraintRight_toLeftOf="@+id/btnChain"
        app:layout_constraintLeft_toRightOf="@+id/btnFuel"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tilInformation" />

    <ImageButton
        android:id="@+id/btnChain"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_green"


        android:src="@drawable/ic_chain"
        app:layout_constraintRight_toLeftOf="@+id/btnEngine"
        app:layout_constraintLeft_toRightOf="@+id/btnFlatTire"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tilInformation" />

    <ImageButton
        android:id="@+id/btnEngine"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_amber"


        android:src="@drawable/ic_engine"
        app:layout_constraintRight_toLeftOf="@+id/btnMore"
        app:layout_constraintLeft_toRightOf="@+id/btnChain"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tilInformation" />

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_bluegray"

        android:padding="15dp"
        android:src="@drawable/ic_fuel_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnEngine"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tilInformation" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilInformation"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:visibility="visible">
        <EditText
            android:id="@+id/etEventInformatiom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/more_details" />

    </android.support.design.widget.TextInputLayout>




</android.support.constraint.ConstraintLayout>
