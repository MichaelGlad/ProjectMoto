<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.glm.sensoracceleration.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



    <Button
        android:id="@+id/btnSensAccelerate"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/acceleration"
        app:layout_constraintRight_toLeftOf="@+id/btnRotate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_chainStyle="spread" />





            <TextView
                android:id="@+id/tvSensorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="TextView"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btnSensAccelerate"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/btnSensAccelerate">

            </TextView>

    <Button
        android:id="@+id/btnRotate"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Magnetics"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnSensAccelerate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />


</android.support.constraint.ConstraintLayout>